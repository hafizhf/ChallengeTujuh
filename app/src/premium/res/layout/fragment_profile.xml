<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_margin="30dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.main.profile.ProfileFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="300dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="15dp">

            <ImageView
                android:id="@+id/iv_image_detail"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_user"/>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv_username_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/tv_complete_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="complete_name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/tv_email_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="example@email.com"
            android:textAlignment="center"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_date_of_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="01/01/1990"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textAlignment="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_goto_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit"
        app:cornerRadius="20dp"
        android:fontFamily="@font/product_sans_bold"
        android:textAllCaps="false"
        android:backgroundTint="@color/main"/>

    <TextView
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Logout"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/product_sans_bold"
        android:textColor="#F44D4D"/>

</LinearLayout>